
@model IEnumerable<Gym.Models.Product>

<div class="row pb-3">

    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card row-cols-1">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="height:300px"/>

                  
                        <div class="pl-1">
                            <p class="card-name h5 text-primary">@product.Name</p>
                           
                        </div>
                        <div class="pl-1">
                            <p>Price:<b>$@product.Price.ToString("0.00")</b></p>

                        </div>
                        <div class="pl-1">
                            <p>Discount Price<b>$@product.DiscountPrice.ToString("0.00")</b></p>

                        </div>
              
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>